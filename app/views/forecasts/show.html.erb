<% if @general_error %>
  <span class="text-red-600 text-sm pt-12 pb-12 tracking-tight"><%= @general_error %></span>
<% else %>
  <div class="pt-12">
    <div class="flex flex-col justify-center items-center">
      <h3 class="text-gray-500 text-2xl pt-3 tracking-tighter"><%= @location %></h3>
      <div class="pt-3 pr-[1.2rem]">
        <span class="inline-block <%= "invisible" unless @is_negative %> text-gray-900 font-bold text-8xl tracking-tighter">-</span><h1 id="temperature_num" class="inline-block text-gray-900 font-bold text-8xl tracking-tighter"><%= @current_temp %></h1>
        <span class="inline-block text-gray-900 font-bold text-7xl align-top tracking-tighter">°</span>
      </div>
      <h2 class="text-gray-900 text-3xl tracking-tighter pt-3">Cloudy</h2>
      <div class="flex justify-between gap-12 pt-3">
        <h3 class="text-2xl text-orange-400 tracking-tight">H:-°</h3>
        <h3 class="text-cyan-400 text-2xl tracking-tight">L:-°</h3>
      </div>
      <div class="flex flex-wrap gap-4 justify-center pt-20 max-w-[20rem]">
        <div class="forecast-container">
          <div class="forecast-day">Sun</div>
          <div class="pr-[0.1rem]">
            <span class="inline-block forecast-negative">-</span><span class="inline-block forecast-temp">75°</span>
          </div>
        </div>
        <div class="forecast-container">
          <div class="forecast-day">Mon</div>
          <div class="pr-[0.2rem]">
            <span class="forecast-negative">-</span><span class="forecast-temp">75°</span>
          </div>
        </div>
        <div class="forecast-container">
          <div class="forecast-day">Tue</div>
          <div class="pr-[0rem]">
            <span class="forecast-negative">-</span><span class="forecast-temp">75°</span>
          </div>
        </div>
        <div class="forecast-container">
          <div class="forecast-day">Wed</div>
          <div class="pr-[0rem]">
            <span class="forecast-negative">-</span><span class="forecast-temp">75°</span>
          </div>
        </div>
        <div class="forecast-container">
          <div class="forecast-day">Thur</div>
          <div class="pr-[0.1rem]">
            <span class="forecast-negative">-</span><span class="forecast-temp">75°</span>
          </div>
        </div>
        <div class="forecast-container">
          <div class="forecast-day">Fri</div>
          <div class="pr-[0.1rem]">
            <span class="forecast-negative">-</span><span class="forecast-temp">75°</span>
          </div>
        </div>
        <div class="forecast-container">
          <div class="forecast-day">Sat</div>
          <div class="pr-[0.1rem]">
            <span class="forecast-negative">-</span><span class="forecast-temp">75°</span>
          </div>
        </div>
      </div>
      <% if @cached_at %>
        <div class="text-gray-300 pt-10 pb-6 text-xs">last updated <%= time_ago_in_words(@cached_at) %> ago</div>
      <% end %>
    </div>
  </div>
<% end %>